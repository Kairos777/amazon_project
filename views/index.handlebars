<h2 class="page-header">Products</h2>

{{#each products}}
    <div class="col-sm-4">
        <a target="_blank" href={{amazonLink}}>
            <img src={{image}} >
        </a>
        <h4>{{title}}</h4>
        <p>{{description}}</p>
        <p>{{price}}</p>
        <a class="button" target="_blank" href={{amazonLink}}>Check it out</a>
    </div>
{{/each}}

<ul class="pagination">
    {{#each pages}}
        {{#if active}}
            <li class="active">
                <a href={{number}}>{{number}}</a>
            </li>
        {{else}}
            <li>
                <a href={{number}}>{{number}}</a>
            </li>
        {{/if}}
    {{/each}}
</ul>